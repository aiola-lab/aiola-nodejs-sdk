{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["recorder_app/types", "examples/1_transcript_events_example/node_modules/@types",
  "examples/2_keywords_spotting_example/node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@recorder/*": ["recorder_app/*"]
    }
  },
  "include": ["aiola_streaming_sdk/**/*", "recorder_app/**/*"],
  "exclude": ["examples/1_transcript_events_example/node_modules", 
  "examples/2_keywords_spotting_example/node_modules", "dist", "test"]
}